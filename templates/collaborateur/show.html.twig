{% extends 'base.html.twig' %}

{% block title %}Collaborateur
{% endblock %}

{% block body %}
	<div id="main-wrapper">
		<div class="container">
			<h1 class="">Collaborateur :</h1>

			<table class="table mt-3">
				<tbody>
					<tr>
						<th>Nom</th>
						<td>{{ collaborateur.nom }}</td>
					</tr>
					<tr>
						<th>Prénom</th>
						<td>{{ collaborateur.prenom }}</td>
					</tr>
					<tr>
						<th>Date de naissance</th>
						<td>{{ collaborateur.dateNaissance ? collaborateur.dateNaissance|date('d-m-Y') : '' }}</td>
					</tr>
					<tr>
						<th>Date d'entrée dans l'entreprise</th>
						<td>{{ collaborateur.dateEntreeEntreprise ? collaborateur.dateEntreeEntreprise|date('d-m-Y') : '' }}</td>
					</tr>
					<tr>
						<th>N° s"curité sociale</th>
						<td>{{ collaborateur.numSecuriteSocial }}</td>
					</tr>
					<tr>
						<th>Type de contrat</th>
						<td>{{ collaborateur.typeContrat }}</td>
					</tr>
					<tr>
						<th>Durée de travail hebdomadaire</th>
						<td>{{ collaborateur.dureeTravailHebdo }}</td>
					</tr>
				</tbody>
			</table>

			<div class="container mt-5">
				<div class=" d-flex flex-row row align-items-start">
					<div class="col-lg-4 col-md-12  text-center">
						<a href="{{ path('collaborateur_edit', {'id': collaborateur.id}) }}">
							<button class="mt-1">Modifier</button>
						</a>
					</div>
					<div class="col-lg-4 col-md-12  text-center">
						{{ include('collaborateur/_delete_form.html.twig') }}
					</div>
					<div class="col-lg-4 col-md-12 text-center">
						<a class="button" href="{{ path('collaborateur_index') }}">Retour</a>

					</div>
				</div>
			</div>

		</div>


	</div>
{% endblock %}
