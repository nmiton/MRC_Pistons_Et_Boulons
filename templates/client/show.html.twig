{% extends 'base.html.twig' %}

{% block title %}Données du client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Date de prèmiere saisie</th>
                <td>{{ client.datePremiereSaisie ? client.datePremiereSaisie|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Type de vehicule</th>
                <td>{{ client.typeVehicule }}</td>
            </tr>
            <tr>
                <th>plaque d'immatriculation</th>
                <td>{{ client.plaqueImmat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">Retour</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
