{% extends 'base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% block body %}
	<div id="main-wrapper">
		<div class="container">
			<h1 class="">Rendez-vous :</h1>

			<table class="table mt-3">
				<tbody>
					<tr>
						<th>Date</th>
						<td>{{ rendez_vou.dateRendezVous ? rendez_vou.dateRendezVous|date('d-m-Y H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>Client</th>
						<td>{{ rendez_vou.idClient.getClient()}}</td>
					</tr>
					<tr>
						<th>Collaborateur</th>
						<td>{{rendez_vou.idCollaborateur.getCollaborateur()}}</td>
					</tr>
					<tr>
						<th>Prestation</th>
						<td>{{rendez_vou.idPrestation.getPrestation()}}</td>
					</tr>
				</tbody>
			</table>

			<div class="container mt-5">
				<div class=" d-flex flex-row row align-items-start">
					<div class="col-lg-4 col-md-12  text-center">
						<a class="button" href="{{ path('rendez_vous_edit', {'id': rendez_vou.id}) }}">Modifier</a>

					</div>
					<div class="col-lg-4 col-md-12  text-center">
						{{ include('rendez_vous/_delete_form.html.twig') }}

					</div>
					<div class="col-lg-4 col-md-12 text-center">
						<a class="button" href="{{ path('rendez_vous_index') }}">Retour</a>
					</div>
				</div>
			</div>


		</div>
	</div>

{% endblock %}
