{% extends 'base.html.twig' %}

{% block title %}Contenu
{% endblock %}

{% block body %}
	<div id="main-wrapper">
		<div class="container">
			<h1 class="mb-2">Contenu :</h1>


			<table class="table">
				<tbody>
					<tr>
						<th>Texte</th>
						<td>{{ content.text }}</td>
					</tr>
					<tr>
						<th>Position</th>
						<td>{{ content.position }}</td>
					</tr>
				</tbody>
			</table>


			<div class="container mt-5">
				<div class=" d-flex flex-row row align-items-start">
					<div class="col-lg-4 col-md-12  text-center">
						<a href="{{ path('content_edit', {'id': content.id}) }}">
							<button class="mt-1">Modifier</button>
						</a>
					</div>
					<div class="col-lg-4 col-md-12  text-center">
						{{ include('content/_delete_form.html.twig') }}

					</div>
					<div class="col-lg-4 col-md-12 text-center">
						<a class="button" href="{{ path('content_index') }}">Retour</a>

					</div>
				</div>
			</div>

		</div>


	</div>
{% endblock %}
